#!/bin/bash

# Function to upload file to Uguu
upload_file() {
    FILE_PATH="$1"

    # Upload the file
    RESPONSE=$(curl -s -F "file=@${FILE_PATH}" "https://uguu.se/api.php?d=upload-tool")

    # Check if response contains a URL
    if [[ "$RESPONSE" == *"http"* ]]; then
        # Extract the URL
        UPLOAD_LINK=$(echo "$RESPONSE" | grep -o 'http[^"]*')

        if [ -z "$UPLOAD_LINK" ]; then
            zenity --error --title="Error" --text="Failed to upload the file."
            exit 1
        fi

        # Display the result and copy to clipboard
        echo "$UPLOAD_LINK" | xclip -selection clipboard
        zenity --info --title="Upload Complete" --text="File uploaded successfully.\nLink: $UPLOAD_LINK\n(Link copied to clipboard)"
    else
        zenity --error --title="Error" --text="Failed to upload the file."
        exit 1
    fi
}

# Main script
for FILE in "$@"; do
    upload_file "$FILE"
done
